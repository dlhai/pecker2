    <script type="text/javascript" src="js/doTe.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <style>
        .xtree {
            font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
            font-size: 16px;
            color: #666;
            white-space: nowrap;
        }

        .xtree > div div {
            padding-left: 18px;
            border: 0px;
            margin: 0px;
        }
        .xtree div>img {
            border: 0px;
            vertical-align: middle;
        }
        .xtree div>span > img {
            margin-right: 5px;
        }
    </style> 
</head>
<body>
    <div id="winderco" class="xtree">
        <div>
            <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
            <div>
                <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                <div style="display:none">
                    <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                    <div>
                        <div><span><img src="img/diy/4.png">十里画屏风场57</span></div>
                        <div><span><img src="img/diy/4.png">十里画屏风场57</span></div>
                    </div>
                </div>
            </div>
            <div>
                <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                <div style="display:none">
                    <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                    <div>
                        <div><span><img src="img/diy/4.png">十里画屏风场57</span></div>
                        <div><span><img src="img/diy/4.png">十里画屏风场5ee</span></div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
            <div>
                <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                <div style="display:none">
                    <img src="img/minus.gif"><span><img src="img/diy/4.png">十里画屏风场57</span>
                    <div>
                        <div><span><img src="img/diy/4.png">十里画屏风场57</span></div>
                        <div><span><img src="img/diy/4.png">十里画屏风场5ee</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">

        function totreeitem(type, data) {
            treeimg = { "winderco": "img/minus.gif", "winderprov": "img/minus.gif", "winder": "img/minus.gif" }
            subtype = { "root": "winderco", "winderco": "winderprov", "winderprov:": "winder" }
            r = "";
			for (i in data)
			{
				t += "<div><img"
					+ " id=\"" + data[i].id
					+ "\" type=\"" + subtype[type]
					+ "\" src=\"img/plus.gif\"><span><img src=\""
					+ treeimg[type] +"</span></div>"
				if (subtype[type] == "winder")
					t = "<div>" + t + "</div>\n"
				else
					t = t + "\n"
				r += t;
			}
            return r;
        }


        function request(tag)
        {
            node = $(tag);
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.open("GET", "sublist" + "?id=" + node.attr("type")+"&stamp=" + node.attr("stamp"), true);
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                    res = xmlhttp.responseText.parseJSON();
                    node.children.append(totreeitem(node.attr("type"), res.data ));
                    node.attr("stamp", res.stamp);
                }
            };
            xmlhttp.send();

        }

        request("#winderco" );


        $(".xtree div>img").bind("click", function () {
            var node = $(event.srcElement).siblings("div");
            if (node.css("display") == "none") {
                $(event.srcElement).attr("src", "img/minus.gif");
                node.css("display", "block");
            }
            else {
                $(event.srcElement).attr("src", "img/plus.gif");
                node.css("display", "none");
            }
        });
        $(".xtree div>span").bind("click", function () {
            var node = $(event.srcElement).siblings("div:last");
            if (node.css("display") == "none") {
                $(event.srcElement).attr("src", "img/minus.gif");
                node.css("display", "block");
            }
            else {
                $(event.srcElement).attr("src", "img/plus.gif");
                node.css("display", "none");
            }
        });
    </script>
</body >
</html >